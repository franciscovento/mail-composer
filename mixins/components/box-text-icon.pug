mixin boxTextIcon(title, text, icon, width="270")
  td(width=width style='border: 1px solid #E7E7E7; border-radius: 12px; vertical-align: top;' vertical-align='top')
    table( width=width align="center" cellspacing="0" cellpadding="0" border="0" style="margin-bottom: 16px; margin-top: 16px; border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt;")
      tbody
        tr
          td(align='center')
            img(src=icon alt='' width="40" height="40" style='display: block; margin: 0 auto; width: 40px; height: 40px;')
        if title    
          tr
            td(align='center')
              p(style='color: #2D2D2D; font-family: Arial, Helvetica, sans-serif; font-size: 12px; line-height: 20px; font-weight: 700; margin: 8px 8px 0 8px;')
                font(color='#2D2D2D' face='Arial, Helvetica, sans-serif')
                  | #{title}        
        if text          
          tr
            td(align='center')
              p(style='color: #2D2D2D; font-family: Arial, Helvetica, sans-serif; font-size: 12px; line-height: 16px; font-weight: 400; margin: 8px 12px 0 12px;')
                font(color='#2D2D2D' face='Arial, Helvetica, sans-serif')
                  | #{text}
        //- +separator("20")
                  