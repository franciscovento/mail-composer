mixin separator(height='12', backgroundColor="")
   // Separator
   table(width='100%' border='0' cellpadding='0' cellspacing='0' role='presentation' style="border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt;")
      tbody 
        if backgroundColor
          tr(style=`background-color: ${backgroundColor};`)
            td(colspan='3' height=height style=`padding: 0; margin: 0; line-height: 0px; font-size: 0px; background-color: ${backgroundColor};` ) &nbsp;
        else
          tr
            td(colspan='3' height=height style=`padding: 0; margin: 0; line-height: 0px; font-size: 0px;` ) &nbsp;
