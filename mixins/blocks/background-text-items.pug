mixin backgroundTextItems(items, backgroundColor="#008657", textColor="#FFFFFF")
  // Background Text Items
  table(bgcolor=`${backgroundColor}` border='0' cellpadding='0' cellspacing='0' style=`background-color:  ${backgroundColor};` valign='middle')
    tbody
      tr
        td(colspan='3' height='4' style="line-height: 0") &nbsp;
      each item in items
        tr
          td(colspan='3' height='12' style="line-height: 0") &nbsp;
          +iconText(item.text, item.icon, {color: textColor, weight: 700, iconSize: 36})
      tr
        td(colspan='3' height='16') &nbsp;