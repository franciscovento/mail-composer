//- props: { color: "white", weight: 400  }
mixin iconText(text, icon, props={color: "#FFFFFF", weight: 700, "iconSize": 32})
  // Text Icon
  table(border='0' cellpadding='0' cellspacing='0')
    tbody
      tr
        td(width='24') &nbsp;
        td
          table(border='0' cellpadding='0' cellspacing='0') 
            tbody 
              tr 
                td(style='padding: 0;')
                  table(border='0' cellpadding='0' cellspacing='0' style=`width: ${props["iconSize"]}px; height: ${props["iconSize"]}px;` width=`${props["iconSize"]}` height=`${props["iconSize"]}`) 
                    tr 
                      td(style='padding: 0;')
                        img(src=icon width=`${props["iconSize"]}` height=`${props["iconSize"]}` style=`width: ${props["iconSize"]}px; height:${props["iconSize"]}px` )
                td(width="10") &nbsp;
                td(style='padding: 0;')
                  p(style=`color: ${props["color"]}; font-family: Arial, Helvetica, sans-serif; font-size: 16px; font-weight: ${props["weight"]}; line-height: 16px; margin: 0;`)
                    font(color=`${props["color"]}` face='Arial, Helvetica, sans-serif' )
                      != text
          td(width='24') &nbsp;