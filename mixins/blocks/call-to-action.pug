mixin callToAction(text, link)
  // Call to action
  +appTable()
    tbody 
      tr 
        td 
          table(align="center" border="0" cellpadding="0" cellspacing="0" width="300" style="width:300px; border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt;")
            tbody
              tr 
                td(align='center' style='border-radius: 5px; background-color: #008657; border-color: #008657; border-style: solid; border-width: 1px; height: 42px; width: 300px; color: #ffffff;')
                  a(href=link rel='noopener' style='width: 300px; background-color: #008657; font-size: 16px; font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-weight: bold; text-decoration: none; border-radius: 5px; padding: 12px 18px; border: 1px solid #008657; display: inline-block;' target='_blank')
                    strong(style='font-weight:bold; color: #ffffff;')
                      span(style='text-decoration:none; color: #ffffff;')
                        | #{text}