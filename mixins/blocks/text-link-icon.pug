mixin textLinkIcon(text, href, icon)
  // Text Link Icon
  table()
    tbody 
      tr
        td
          a(href=href style="text-decoration:none;" target="_blank")
            table(border='0' cellpadding='0' cellspacing='0')
              tbody
                tr
                  td(width='24') &nbsp;
                  td
                    table(border='0' cellpadding='0' cellspacing='0') 
                      tbody 
                        tr 
                          td(style='padding: 0;')
                            img(src=icon width="16px" height="16px" style="width: 16px; height:16px" )
                          td(width="5") &nbsp;
                          td(style='padding: 0;')
                            p(style=`color: #2D2D2D; font-family: Arial, Helvetica, sans-serif; font-size: 16px; font-weight: 400; line-height: 16px; margin: 0; border-bottom: 1px solid #2D2D2D`)
                              font(color='#2D2D2D' face='Arial, Helvetica, sans-serif' )
                                | #{text}
                  td(width='24') &nbsp;
